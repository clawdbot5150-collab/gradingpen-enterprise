# Environment Configuration for AIGFNetwork
# Copy this file to .env.local (frontend) and .env (backend) and fill in your values

# ===================
# Database Configuration
# ===================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aigf_network
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# For production, use connection pooling
DB_MAX_CONNECTIONS=20
DB_SSL=false

# ===================
# Application Configuration
# ===================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ===================
# Security & Authentication
# ===================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===================
# OpenAI Configuration
# ===================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ===================
# Redis Configuration (Optional)
# ===================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================
# Email Configuration
# ===================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@aigfnetwork.com
SENDGRID_FROM_NAME=AIGFNetwork

# Alternative: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com

# ===================
# File Storage Configuration
# ===================
STORAGE_PROVIDER=local
# Options: local, aws-s3, google-cloud, cloudinary

# For AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=aigf-network-files

# For Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json
GOOGLE_CLOUD_BUCKET=aigf-network-files

# For Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ===================
# External Services
# ===================

# Voice Services (Optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=default_voice_id

# Speech-to-Text (Optional)
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region

# ===================
# Analytics & Monitoring
# ===================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=your_sentry_dsn

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ===================
# Logging
# ===================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# ===================
# CORS Configuration
# ===================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===================
# Session Configuration
# ===================
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=3600000

# ===================
# Feature Flags
# ===================
ENABLE_VOICE_CHAT=false
ENABLE_GROUP_CHATS=false
ENABLE_COMMUNITY_FEATURES=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_PREMIUM_FEATURES=true

# ===================
# Frontend Environment Variables
# ===================
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WS_URL=ws://localhost:5000
NEXT_PUBLIC_APP_NAME=AIGFNetwork
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
NEXT_PUBLIC_ENABLE_VOICE_CHAT=false
NEXT_PUBLIC_ENABLE_PWA=true

# ===================
# Development & Testing
# ===================
ENABLE_DEV_TOOLS=true
MOCK_OPENAI_RESPONSES=false
BYPASS_RATE_LIMITING=false
ENABLE_REQUEST_LOGGING=true

# ===================
# Backup & Recovery
# ===================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ===================
# Health Checks
# ===================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
ENABLE_HEALTH_CHECKS=true

# ===================
# WebSocket Configuration
# ===================
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=5000
WS_MAX_CONNECTIONS=1000

# ===================
# Content Moderation
# ===================
ENABLE_CONTENT_MODERATION=true
MODERATION_API_KEY=your_moderation_api_key
AUTO_MODERATE_THRESHOLD=0.8

# ===================
# Payments (Optional)
# ===================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===================
# SSL & Security
# ===================
SSL_KEY_PATH=path/to/ssl/key.pem
SSL_CERT_PATH=path/to/ssl/cert.pem
ENABLE_HTTPS=false
ENABLE_HSTS=true
ENABLE_CSP=true

# ===================
# Caching
# ===================
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ===================
# Notifications
# ===================
ENABLE_PUSH_NOTIFICATIONS=true
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
PUSH_NOTIFICATION_SUBJECT=mailto:support@aigfnetwork.com

# ===================
# Internationalization
# ===================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de
ENABLE_RTL_SUPPORT=false

# ===================
# Advanced Features
# ===================
ENABLE_AI_PERSONALITY_LEARNING=true
ENABLE_CONVERSATION_ANALYTICS=true
ENABLE_PREDICTIVE_SUGGESTIONS=false
ENABLE_VOICE_EMOTION_DETECTION=false

# ===================
# Compliance & Privacy
# ===================
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ENABLE_COOKIE_CONSENT=true

# ===================
# Performance
# ===================
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true
ENABLE_LAZY_LOADING=true
BUNDLE_ANALYZER=false

# ===================
# Docker Configuration
# ===================
DOCKER_REGISTRY=registry.digitalocean.com
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=aigf-network

# ===================
# Deployment
# ===================
DEPLOY_ENVIRONMENT=development
DEPLOY_REGION=us-west-1
AUTO_DEPLOY=false
ROLLBACK_ON_FAILURE=true

# ===================
# Secrets (Use environment-specific files)
# ===================
# These should be loaded from secure secret management in production
# - Kubernetes secrets
# - AWS Secrets Manager
# - Azure Key Vault
# - Google Secret Manager
# - HashiCorp Vault