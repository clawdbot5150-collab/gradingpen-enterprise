// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String           @id @default(cuid())
  email        String           @unique
  username     String           @unique
  displayName  String
  avatar       String?
  passwordHash String
  subscription SubscriptionTier @default(FREE)
  credits      Int              @default(0)
  isVerified   Boolean          @default(false)
  isActive     Boolean          @default(true)
  lastLoginAt  DateTime?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relations
  videos       Video[]
  templates    Template[]
  brandKits    BrandKit[]
  projects     Project[]
  teamMembers  TeamMember[]
  subscriptions UserSubscription[]
  apiKeys      ApiKey[]
  webhooks     Webhook[]
  uploads      FileUpload[]
  analytics    UserAnalytics[]

  @@map("users")
}

model Video {
  id          String       @id @default(cuid())
  userId      String
  title       String
  description String?
  thumbnailUrl String?
  videoUrl    String?
  duration    Int?
  resolution  VideoResolution
  status      VideoStatus  @default(DRAFT)
  metadata    Json?
  settings    Json?
  processingData Json?
  errorMessage String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  analytics   VideoAnalytics[]

  @@map("videos")
}

model Template {
  id          String           @id @default(cuid())
  title       String
  description String
  category    TemplateCategory
  thumbnailUrl String
  previewUrl  String?
  duration    Int
  aspectRatio String
  tags        String[]
  isPremium   Boolean          @default(false)
  price       Float?
  authorId    String
  usageCount  Int              @default(0)
  rating      Float            @default(0)
  ratingCount Int              @default(0)
  config      Json
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  author      User             @relation(fields: [authorId], references: [id])
  projects    Project[]
  purchases   TemplatePurchase[]

  @@map("templates")
}

model BrandKit {
  id        String   @id @default(cuid())
  userId    String
  name      String
  logo      Json?
  colors    Json[]
  fonts     Json[]
  templates String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("brand_kits")
}

model Project {
  id          String    @id @default(cuid())
  userId      String
  name        String
  description String?
  templateId  String?
  isPublic    Boolean   @default(false)
  config      Json?
  thumbnail   String?
  lastEditedBy String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  template    Template? @relation(fields: [templateId], references: [id])
  members     ProjectMember[]

  @@map("projects")
}

model ProjectMember {
  id        String      @id @default(cuid())
  projectId String
  userId    String
  role      ProjectRole @default(VIEWER)
  joinedAt  DateTime    @default(now())

  // Relations
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_members")
}

model TeamMember {
  id       String   @id @default(cuid())
  userId   String
  teamId   String
  role     TeamRole @default(VIEWER)
  joinedAt DateTime @default(now())

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@map("team_members")
}

model UserSubscription {
  id                  String           @id @default(cuid())
  userId              String
  planId              String
  stripeSubscriptionId String?         @unique
  status              SubscriptionStatus @default(ACTIVE)
  currentPeriodStart  DateTime
  currentPeriodEnd    DateTime
  cancelAtPeriodEnd   Boolean          @default(false)
  trialStart          DateTime?
  trialEnd            DateTime?
  metadata            Json?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  // Relations
  user                User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan                SubscriptionPlan @relation(fields: [planId], references: [id])

  @@map("user_subscriptions")
}

model SubscriptionPlan {
  id          String           @id @default(cuid())
  name        String
  description String
  tier        SubscriptionTier
  price       Float
  interval    String           // 'month' or 'year'
  features    Json[]
  limits      Json
  isPopular   Boolean          @default(false)
  isActive    Boolean          @default(true)
  stripePriceId String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  subscriptions UserSubscription[]

  @@map("subscription_plans")
}

model TemplatePurchase {
  id         String   @id @default(cuid())
  userId     String
  templateId String
  price      Float
  purchasedAt DateTime @default(now())

  // Relations
  template   Template @relation(fields: [templateId], references: [id])

  @@unique([userId, templateId])
  @@map("template_purchases")
}

model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  name        String
  keyHash     String   @unique
  permissions String[]
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model Webhook {
  id        String   @id @default(cuid())
  userId    String
  url       String
  events    String[]
  secret    String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveries WebhookDelivery[]

  @@map("webhooks")
}

model WebhookDelivery {
  id            String    @id @default(cuid())
  webhookId     String
  eventType     String
  payload       Json
  responseCode  Int?
  responseBody  String?
  deliveredAt   DateTime?
  nextRetryAt   DateTime?
  retryCount    Int       @default(0)
  status        String    @default("pending") // pending, delivered, failed
  createdAt     DateTime  @default(now())

  // Relations
  webhook       Webhook   @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  @@map("webhook_deliveries")
}

model FileUpload {
  id           String   @id @default(cuid())
  userId       String
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  storageKey   String
  metadata     Json?
  createdAt    DateTime @default(now())

  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("file_uploads")
}

model VideoAnalytics {
  id              String   @id @default(cuid())
  videoId         String
  views           Int      @default(0)
  completionRate  Float    @default(0)
  averageWatchTime Float   @default(0)
  engagement      Json?
  traffic         Json?
  demographics    Json?
  performance     Json?
  date            DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  video           Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@unique([videoId, date])
  @@map("video_analytics")
}

model UserAnalytics {
  id            String   @id @default(cuid())
  userId        String
  totalVideos   Int      @default(0)
  totalViews    Int      @default(0)
  totalDuration Int      @default(0)
  creditsUsed   Int      @default(0)
  date          DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("user_analytics")
}

model Job {
  id          String    @id @default(cuid())
  type        String
  userId      String?
  priority    Int       @default(0)
  payload     Json
  status      JobStatus @default(PENDING)
  progress    Int       @default(0)
  result      Json?
  error       String?
  retries     Int       @default(0)
  maxRetries  Int       @default(3)
  scheduledAt DateTime?
  startedAt   DateTime?
  completedAt DateTime?
  failedAt    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status, priority, scheduledAt])
  @@map("jobs")
}

model ContentModeration {
  id         String              @id @default(cuid())
  contentId  String
  contentType String             // video, image, text, etc.
  status     ModerationStatus    @default(PENDING)
  result     Json?
  reviewerId String?
  reviewedAt DateTime?
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt

  @@index([contentType, status])
  @@map("content_moderation")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String
  resourceId String?
  metadata  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId, action, createdAt])
  @@index([resource, resourceId])
  @@map("audit_logs")
}

// Enums
enum SubscriptionTier {
  FREE
  PRO
  BUSINESS
  ENTERPRISE
}

enum VideoResolution {
  SD_480P
  HD_720P
  FHD_1080P
  UHD_4K
}

enum VideoStatus {
  DRAFT
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum TemplateCategory {
  SOCIAL_MEDIA
  ADVERTISING
  EXPLAINER
  TUTORIAL
  PRESENTATION
  LOGO_REVEAL
  SLIDESHOW
  ANIMATION
  MUSIC_VIDEO
  NEWS
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  UNPAID
  TRIALING
}

enum ProjectRole {
  VIEWER
  EDITOR
  ADMIN
}

enum TeamRole {
  VIEWER
  EDITOR
  ADMIN
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum ModerationStatus {
  PENDING
  APPROVED
  REJECTED
  REVIEW_REQUIRED
}