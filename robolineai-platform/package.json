{
  "name": "robolineai-platform",
  "version": "1.0.0",
  "description": "Ultimate AI-Powered Robotic Process Automation Platform",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ai-engine\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:ai-engine": "cd ai-engine && python main.py",
    "build": "npm run build:frontend && npm run build:backend && npm run build:ai-engine",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:ai-engine": "cd ai-engine && python -m build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\" \"npm run start:ai-engine\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "start:ai-engine": "cd ai-engine && python main.py --prod",
    "test": "npm run test:frontend && npm run test:backend && npm run test:ai-engine",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:ai-engine": "cd ai-engine && pytest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:undeploy": "kubectl delete -f k8s/",
    "setup:dev": "node scripts/setup-dev.js",
    "setup:prod": "node scripts/setup-prod.js",
    "migrate:up": "cd backend && npm run migrate:up",
    "migrate:down": "cd backend && npm run migrate:down",
    "seed": "cd backend && npm run seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robolineai/platform.git"
  },
  "keywords": [
    "rpa",
    "robotic-process-automation",
    "ai",
    "machine-learning",
    "automation",
    "enterprise",
    "saas",
    "workflow",
    "bot-management",
    "process-mining"
  ],
  "author": "RoboLineAI Team",
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/robolineai/platform/issues"
  },
  "homepage": "https://robolineai.com",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared",
    "mobile",
    "desktop-agent"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}